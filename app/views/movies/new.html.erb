<h1>Add a movie here!</h1>

<%= form_for @movie do |f| %>
  <div>
    <%= f.label "title" %><br>
    <%= f.text_field "title" %>
  </div>
  <div>
    <%= f.label "director" %><br>
    <%= f.text_field "director" %>
  </div>
  <div>
    <%= f.label "runtime_in_minutes" %><br>
    <%= f.text_field "runtime_in_minutes" %>
  </div>
  <div>
    <%= f.label "description" %><br>
    <%= f.text_area "description" %>
  </div>
  <div>
    <%= f.label "release_date" %><br>
    <%= f.text_field "release_date" %>
  </div>
  <div>
    <%= f.label "poster_img_url" %><br>
    <%= f.text_field "poster_img_url" %>
  </div>
  <div>
    <%= f.submit "Save" %>
  </div>
<% end %>


<%= link_to "Back to the dashboard!", movies_path %>
